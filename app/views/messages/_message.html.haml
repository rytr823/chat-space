.wrapper__chat-main__message-list__messages
  .wrapper__chat-main__message-list__messages__post-info
    .wrapper__chat-main__message-list__messages__post-info__message-info
      .wrapper__chat-main__message-list__messagespost-info__message-info__name
        = message.user.name
      .wrapper__chat-main__message-list__messages__post-info__message-info__date
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .wrapper__chat-main__message-list__messages__post-info__message
      - if message.content.present?
        %p.Message__content
          = message.content
      = image_tag message.image.url, class: 'Message__image' if message.image.present?